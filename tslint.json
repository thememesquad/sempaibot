{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "curly": false,
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
        "forin": false,
        "no-console": false,
        "no-bitwise": false,
        "max-line-length": 140,

        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "rulesDirectory": []
}